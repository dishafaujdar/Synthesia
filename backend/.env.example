# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ai_research_agent?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
OPENAI_API_KEY=your-openai-api-key
NEWS_API_KEY=your-news-api-key
WIKIPEDIA_API_BASE=https://en.wikipedia.org/api/rest_v1

# Monitoring & Observability
LOG_LEVEL=info
OTEL_SERVICE_NAME=ai-research-agent-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Job Queue
JOB_CONCURRENCY=5
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=5000

# Performance
DB_CONNECTION_POOL_SIZE=20
API_TIMEOUT=30000
CACHE_TTL=3600
